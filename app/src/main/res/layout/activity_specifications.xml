<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".specifications"
    android:background="@drawable/farmthree">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Specifications of the product"
            android:textColor="#010203"
            android:textSize="28dp"
            android:textStyle="bold"
            />

    </LinearLayout>
    <Space
        android:layout_width="20dp"
        android:layout_height="60dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Company Name"
            android:textStyle="bold"
            android:textColor="#010203"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/company_name"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:inputType="text"
            android:background="@drawable/edittextstyle"
            android:paddingLeft="4dp"
            android:textSize="20dp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Model Number"
            android:textStyle="bold"
            android:textColor="#010203"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/model_number"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:inputType="text"
            android:background="@drawable/edittextstyle"
            android:paddingLeft="4dp"
            android:textSize="20dp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Price per day"
            android:textStyle="bold"
            android:textColor="#010203"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/price_per_day"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:inputType="number"
            android:background="@drawable/edittextstyle"
            android:paddingLeft="4dp"
            android:textSize="20dp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/upload_btn"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Upload"
            android:textColor="@color/white"
            android:background="@drawable/myborder"/>/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:outlineAmbientShadowColor="@color/white"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            />
    </LinearLayout>

</LinearLayout>