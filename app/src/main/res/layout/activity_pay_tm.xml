<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".PayTm"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:srcCompat="@drawable/paytm" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/paytmtv1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Contact Number"
            android:textStyle="bold"
            android:textColor="#010203"

            android:textSize="20dp"/>
        <EditText
            android:id="@+id/paytmev1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:inputType="number"
            android:paddingLeft="4dp"
            android:textStyle="bold"
            android:textColor="#010203"
            android:background="@drawable/edittextstyle"

            android:textSize="20dp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/paytmtv2"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Amount to pay"
            android:textStyle="bold"
            android:textColor="#010203"

            android:textSize="20dp"/>
        <EditText
            android:id="@+id/paytmev2"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:inputType="number"
            android:paddingLeft="4dp"
            android:textStyle="bold"
            android:textColor="#010203"
            android:background="@drawable/edittextstyle"
            android:textSize="20dp"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/paytmbutton"
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:text="Pay"
            android:background="@drawable/paytmborder"
            android:textColor="@color/white"
            android:textSize="20dp"/>


    </LinearLayout>



</LinearLayout>







