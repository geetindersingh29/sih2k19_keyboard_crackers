<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ratingbuyer">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Rate the product"
            android:textStyle="bold"
            android:textColor="#010203"

            android:textSize="20dp"/>
        <Spinner
            android:id="@+id/product_rate"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/bratearray"
            android:prompt="@string/bchoose"
            android:background="@drawable/spinnerborder">

        </Spinner>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Rate the Seller"
            android:textStyle="bold"
            android:textColor="#010203"

            android:textSize="20dp"/>
        <Spinner
            android:id="@+id/buyer_rate"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/bratearray"
            android:prompt="@string/bchoose"
            android:background="@drawable/spinnerborder">

        </Spinner>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:text="submit"
            android:background="@drawable/paytmborder"
            android:textColor="@color/white"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/buttonchat"
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:text="chat"
            android:background="@drawable/paytmborder"
            android:textColor="@color/white"
            android:textSize="20dp"/>


    </LinearLayout>



</LinearLayout>